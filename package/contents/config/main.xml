<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0 http://www.kde.org/standards/kcfg/1.0/kcfg.xsd">
  <kcfgfile name="" />

  <group name="Appearance">
    <entry name="locale" type="String">
      <label>Type of local market to use.</label>
      <choices name="Settings::locale">
        <choice name="de-DE" />
        <choice name="en-CA" />
        <choice name="en-US" />
        <choice name="en-GB" />
        <choice name="es-ES" />
        <choice name="fr-CA" />
        <choice name="fr-FR" />
        <choice name="it-IT" />
        <choice name="ja-JP" />
        <choice name="zh-CN" />
      </choices>
      <default>fr-FR</default>
    </entry>
    <entry name="searchEngine" type="String">
      <label>Search engine to use.</label>
      <choices name="Settings::searchEngine">
        <choice name="bing" />
        <choice name="duckduckgo" />
        <choice name="ecosia" />
        <choice name="google" />
        <choice name="qwant" />
        <choice name="startpage" />
      </choices>
      <default>google</default>
    </entry>
    <entry name="showLocation" type="Bool">
      <label>Whether to show or not location (city and country).</label>
      <default>true</default>
    </entry>
    <entry name="oneLineMode" type="Bool">
      <label>Whether or not to show the location next to the title.</label>
      <default>false</default>
    </entry>
    <entry name="paddingLeft" type="Int">
      <label></label>
      <default>10</default>
    </entry>
    <entry name="paddingRight" type="Int">
      <label></label>
      <default>10</default>
    </entry>
    <entry name="paddingTop" type="Int">
      <label></label>
      <default>0</default>
    </entry>
    <entry name="autoFontAndSize" type="Bool">
      <label>Use Plasma default font and automatically determine font size.</label>
      <default>true</default>
    </entry>
    <entry name="fontFamily" type="String">
      <label>Font family. e.g "arial". The system font is used if this is not set.</label>
      <default></default>
    </entry>
    <entry name="bold" type="Bool">
      <label>Sets the font to bold.</label>
      <default>false</default>
    </entry>
    <entry name="italic" type="Bool">
      <label>Sets the font to italic.</label>
      <default>false</default>
    </entry>
    <entry name="fontWeight" type="Int">
      <label>Sets font weight.</label>
      <default>50</default>
    </entry>
    <entry name="fontStyleName" type="String">
      <label>Sets font style </label>
      <default></default>
    </entry>
    <entry name="fontSize" type="Int">
      <label>Sets font size.</label>
      <default>10</default>
    </entry>
  </group>
</kcfg>